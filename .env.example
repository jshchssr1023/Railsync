# RailSync Environment Configuration
# Copy this file to .env and update ALL values before running.
# Generate secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=railsync
POSTGRES_PASSWORD=CHANGE_ME_generate_a_secure_password
POSTGRES_DB=railsync
DATABASE_URL=postgresql://railsync:CHANGE_ME_generate_a_secure_password@postgres:5432/railsync

# ============================================================================
# AUTHENTICATION
# ============================================================================
# REQUIRED: Server will NOT start without a valid JWT_SECRET.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_generate_a_64_byte_hex_secret
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_DAYS=7

# ============================================================================
# BACKEND API
# ============================================================================
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000

# ============================================================================
# FRONTEND
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ============================================================================
# ERROR TRACKING (leave blank to disable)
# ============================================================================
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# SAP INTEGRATION (leave blank for mock mode)
# ============================================================================
# SAP S/4HANA OData / REST API endpoint
SAP_API_URL=
# OAuth2 credentials for SAP Cloud Platform or S/4HANA
SAP_CLIENT_ID=
SAP_CLIENT_SECRET=
SAP_TOKEN_URL=
# SAP company code and client number
SAP_COMPANY_CODE=1000
SAP_CLIENT=100

# ============================================================================
# SALESFORCE INTEGRATION (leave blank for mock mode)
# ============================================================================
# Salesforce instance URL (e.g. https://yourorg.my.salesforce.com)
SALESFORCE_INSTANCE_URL=
# Connected App credentials
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
# Integration user (password must include security token appended)
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
# API version (optional, defaults to v59.0)
SALESFORCE_API_VERSION=v59.0
